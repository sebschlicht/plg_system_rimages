<extension version="3.2" type="plugin" group="system" method="upgrade">
  <name>PLG_SYSTEM_RIMAGES</name>
  <description>PLG_SYSTEM_RIMAGES_XML_DESCRIPTION</description>
  <version>0.0.2</version>

  <author>Sebastian Schlicht</author>
  <creationDate>Jun 2018</creationDate>
  <copyright>Copyright (C) 2018 Sebastian Schlicht. All rights reserved.</copyright>
  <license>MIT License; see LICENSE</license>
  <authorEmail>sebastian@jablab.de</authorEmail>
  <authorUrl>http://www.jablab.de</authorUrl>

  <updateservers>
    <server type="extension" name="Responsive Images Plugin Updates">http://updates.jablab.de/joomla/plg_system_rimages/extension.xml</server>
  </updateservers>

  <files>
    <filename plugin="rimages">rimages.php</filename>
    <filename>DomTreeTraverser.php</filename>
    <filename>index.html</filename>

    <folder>forms</folder>
    <folder>language</folder>
  </files>

  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_system_rimages.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_system_rimages.sys.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_system_rimages.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_system_rimages.sys.ini</language>
  </languages>

  <config>
    <fields name="params" addfieldpath="plugins/system/rimages/fields">
      <fieldset name="basic">
      </fieldset>
      <fieldset name="global">
        <field type="subform" name="global-items"
          label="PLG_SYSTEM_RIMAGES_CFG_GLOBAL_ITEMS_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_GLOBAL_ITEMS_DESC"
          formsource="/plugins/system/rimages/forms/width.xml"
          multiple="true" layout="joomla.form.field.subform.repeatable-table"/>
      </fieldset>
      <fieldset name="content">
        <field type="subform" name="content-items"
          label="PLG_SYSTEM_RIMAGES_CFG_CONTENT_ITEMS_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_CONTENT_ITEMS_DESC"
          formsource="/plugins/system/rimages/forms/width.xml"
          multiple="true" layout="joomla.form.field.subform.repeatable-table"/>
      </fieldset>
      <fieldset name="modpos" addfieldpath="administrator/components/com_modules/models/fields">
        <field type="moduleposition" name="modpos-position1"
          label="PLG_SYSTEM_RIMAGES_CFG_MODPOS_MODULE_POSITION_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_MODPOS_MODULE_POSITION_DESC"
          default="" maxlength="50"/>
        <field type="subform" name="modpos-breakpoints1"
          label="PLG_SYSTEM_RIMAGES_CFG_MODPOS_BREAKPOINTS_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_MODPOS_BREAKPOINTS_DESC"
          formsource="/plugins/system/rimages/forms/width.xml"
          multiple="true" layout="joomla.form.field.subform.repeatable-table"/>
      </fieldset>
      <fieldset name="modules">
        <field type="text" name="module-id1"
          label="PLG_SYSTEM_RIMAGES_CFG_MODULE_ID_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_MODULE_ID_DESC"/>
        <field type="subform" name="module-breakpoints1"
          label="PLG_SYSTEM_RIMAGES_CFG_MODULE_BREAKPOINTS_LABEL" description="PLG_SYSTEM_RIMAGES_CFG_MODULE_BREAKPOINTS_DESC"
          formsource="/plugins/system/rimages/forms/width.xml"
          multiple="true" layout="joomla.form.field.subform.repeatable-table"/>
      </fieldset>
    </fields>
  </config>
</extension>
